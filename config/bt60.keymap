#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/rgb.h>
#include <dt-bindings/zmk/backlight.h>

#define DEFAULT 	0
#define d_code   	1
#define d_down  	2
#define d_up   		3
#define arrows		4

/ {
	keymap {
		compatible = "zmk,keymap";

		default_layer {
				// ------------------------------------------------------------------------------------------
				// | ESC |  1  |  2  |  3  |  4  |  5  |  6  |  7  |  8  |  9  |  0  |  -  |  =  |BKSP | DEL |
				// | TAB  |  Q  |  W  |  E  |  R  |  T  |  Y  |  U  |  I  |  O  |  P  |  [  |  ]  |  |   |
				// | CAPS  |  A  |  S  |  D  |  F  |  G  |  H  |  J  |  K  |  L  |  ;  |  '  |     ENTER    |
				// |  SHIFT|NONE|  Z  |  X  |  C  |  V  |  B  |  N  |  M  |  ,  |  .  | /   | SHFT | UP | 1  |
				// |  CTL  |  WIN  |  ALT  |            SPACE              | ALT | CTRL | LEFT | DOWN | RIGHT |
				// ------------------------------------------------------------------------------------------
			bindings = <
				&kp ESC &kp N1 &kp N2 &kp N3 &kp N4 &kp N5 &kp N6 &kp N7 &kp  N8   &kp  N9 &kp  N0  &kp MINUS &kp EQUAL &kp BSPC &kp C_MUTE
				&kp TAB  &kp Q  &kp W  &kp E  &kp R  &kp T  &kp Y  &kp U  &kp  I    &kp  O  &kp  P   &kp LBKT &kp RBKT  &kp DEL
				&kp CLCK  &kp A  &kp S  &kp D  &kp F  &kp G  &kp H  &kp J  &kp  K    &kp  L  &kp SEMI &kp SQT           &kp RET
				&kp LSHFT &none  &kp Z  &kp X  &kp C  &kp V  &kp B  &kp N  &kp M  &kp COMMA &kp DOT &kp FSLH    &kp RSHFT &none &mo d_up
				&kp LCTRL &kp LGUI &kp LALT            &kp SPACE                          &mt RALT LEFT  &mo d_down &mt RCTRL RIGHT &mo arrows &none
			>;
			sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
		};
		d_code {
			bindings = <
				&trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans
				&trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans
				&trans   &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans  &trans   &trans
				&trans &none &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &none &trans
				&trans &trans &trans              &trans                            &trans &trans &trans &trans &none
			>;
			sensor-bindings = <&inc_dec_kp LC(Y) LC(Z)>;
		};
		d_down {
			bindings = <
				&trans &kp F1 &kp F2 &kp F3 &kp F4 &kp F5 &kp F6 &kp F7 &kp F8 &kp F9 &kp F10 &kp F11 &kp F12 &kp GRAVE &kp C_PLAY_PAUSE
				&trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &kp F14 &kp F15 &kp F16 &kp BSLH
				&trans    &bt BT_DISC 0 &bt BT_DISC 1 &bt BT_DISC 2 &trans &trans &trans &trans &trans &trans &trans  &kp PAGE_UP   &trans
				&trans &none &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &trans &bt BT_CLR_ALL &trans &trans &kp LC(Z) &kp LC(Y) &kp PAGE_DOWN &trans &none &sys_reset
				&trans &trans  &trans              &kp LS(MINUS)                            &kp LC(LS(TAB))  &trans &kp LC(TAB) &bl BL_CYCLE &none
			>;
			sensor-bindings = <&inc_dec_kp RIGHT LEFT>;
		};
		d_up {
			bindings = <
				&bl BL_TOG &bl BL_INC &bl BL_DEC &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &kp LS(GRAVE) &kp LA(F4)
				&trans &trans &trans &trans &trans &trans &trans &trans &trans &kp PSCRN &kp SLCK &kp PAUSE_BREAK &kp INS &kp LS(BSLH)
				&trans   &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans  &kp HOME   &trans
				&trans &none &trans &trans &trans &trans &trans &trans &trans &trans &trans &kp END &kp LC(T) &none &trans
				&trans &trans  &trans              &trans                            &kp LC(LS(T))  &kp LC(LS(ESC)) &kp LC(W) &kp LG(D) &none
			>;
			sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
		};
		arrows {
			bindings = <
				&bootloader &kp F1 &kp F2 &kp F3 &kp F4 &kp F5 &kp F6 &kp F7 &kp F8 &kp F9 &kp F10 &kp F11 &kp F12 &kp GRAVE &kp F5
				&trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans &kp BSLH
				&trans   &trans &trans &trans &trans &trans &trans &trans &trans &trans &trans  &trans   &trans
				&trans &none &trans &trans &trans &trans &trans &trans &trans &trans &trans &kp UP &kp LG(E) &none &kp LG(D)
				&trans &trans &trans              &trans                            &kp LEFT &kp DOWN &kp RIGHT &trans &none
			>;
			sensor-bindings = <&inc_dec_kp LC(Y) LC(Z)>;
		};
	};
};
